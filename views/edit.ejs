<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Edit - C&T Pizza</title>
</head>
<%- include('layouts/nav'); -%>

    <body>
        <% for (let foundcarts of foundcart) { %>
            <div id="edit-header">
                <p>Order for <%= foundcarts.uname%></p>
            </div>
            <div id="edit">
                <form action="/cart/edit/<%= foundcarts._id %>/update" id="editform" method="post">
                    <label for="uname">Name</label>
                    <input type="text" name="uname" id="uname" value="<%= foundcarts.uname%>" placeholder="Enter name..." required>

                    <label for="address">Address</label>
                    <input type="text" name="address" id="address" value="<%= foundcarts.address%>" placeholder="Enter your address...">

                    <label for="size">Size</label>
                    <select name="size" id="size" required>
                        <option value="none" selected disabled hidden><%= foundcarts.size%></option>
                        <option value="Small" id="small">Small</option>
                        <option value="Medium" id="meduim">Medium</option>
                        <option value="Large" id="large">Large</option>
                        <option value="X-Large" id="x-large">X-Large</option>
                    </select>

                    <label for="mod">Modifiers</label>
                    <div class="order-checkbox" id="mod">
                        <input type="checkbox" id="redsauce" name="mod" value="Red Sauce" <%= (foundcarts.modifier.includes("Red Sauce")) ? "checked" : null %> />
                        <label for="redsauce">Red Sauce</label>
                        <input type="checkbox" id="whitesauce" name="mod" value="White Sauce" <%= (foundcarts.modifier.includes("White Sauce")) ? "checked" : null %> />
                        <label for="whitesauce">White Sauce</label>
                        <input type="checkbox" id="pepperoni" name="mod" value="Pepperoni" <%= (foundcarts.modifier.includes("Pepperoni")) ? "checked" : null %> />
                        <label for="pepperoni">Pepperoni</label>
                        <input type="checkbox" id="sausage" name="mod" value="Sausage" <%= (foundcarts.modifier.includes("Sausage")) ? "checked" : null %> />
                        <label for="sausage">Sausage</label>
                        <input type="checkbox" id="bacon" name="mod" value="Bacon" <%= (foundcarts.modifier.includes("Bacon")) ? "checked" : null %> />
                        <label for="bacon">Bacon</label>
                        <input type="checkbox" id="pineapple" name="mod" value="Pineapple" <%= (foundcarts.modifier.includes("Pineapple")) ? "checked" : null %> />
                        <label for="pineapple">Pineapple</label>
                    </div>

                    <label for="drinks">Drinks</label>
                    <div class="order-checkbox" id="drinks">
                        <input type="checkbox" id="coke" name="drinks" value="Coke" <%= (foundcarts.drinks.includes("Coke")) ? "checked" : null %> />
                        <label for="coke">Coke</label>
                        <input type="checkbox" id="fanta" name="drinks" value="Fanta" <%= (foundcarts.drinks.includes("Fanta")) ? "checked" : null %> />
                        <label for="fanta">Fanta</label>
                        <input type="checkbox" id="sprite" name="drinks" value="Sprite" <%= (foundcarts.drinks.includes("Sprite")) ? "checked" : null %> />
                        <label for="sprite">Sprite</label>
                        <input type="checkbox" id="mug" name="drinks" value="Mug" <%= (foundcarts.drinks.includes("Mug")) ? "checked" : null %> />
                        <label for="mug">Mug</label>
                        <input type="checkbox" id="brisk" name="drinks" value="Brisk"<%= (foundcarts.drinks.includes("Brisk")) ? "checked" : null %> />
                        <label for="brisk">Brisk Ice Tea</label>
                        <input type="checkbox" id="mntdew" name="drinks" value="Mountain Dew" <%= (foundcarts.drinks.includes("Mountain Dew")) ? "checked" : null %> />
                        <label for="mntdew">Mountain Dew</label>
                    </div>

                    <label for="sides">Sides</label>
                    <div class="order-checkbox" id="sides">
                        <input type="checkbox" id="wings" name="sides" value="Wings" <%= (foundcarts.sides.includes("Wings")) ? "checked" : null %> />
                        <label for="wings">Wings</label>
                        <input type="checkbox" id="breadsticks" name="sides" value="Breadsticks" <%= (foundcarts.sides.includes("Breadsticks")) ? "checked" : null %> >
                        <label for="breadsticks">Breadsticks</label>
                        <input type="checkbox" id="garlicbread" name="sides" value="Garlic Bread" <%= (foundcarts.sides.includes("Garlic Bread")) ? "checked" : null %> >
                        <label for="garlicbread">Garlic Bread</label>
                        <input type="checkbox" id="mozarellasticks" name="sides" value="Mozarella Sticks" <%= (foundcarts.sides.includes("Mozarella Sticks")) ? "checked" : null %> >
                        <label for="mozarellasticks">Mozarella Sticks</label>
                        <input type="checkbox" id="cheesecurds" name="sides" value="Cheesecurds" <%= (foundcarts.sides.includes("Cheesecurds")) ? "checked" : null %> >
                        <label for="cheesecurds">Cheese Curds</label>
                        <input type="checkbox" id="fries" name="sides" value="Fries" <%= (foundcarts.sides.includes("Fries")) ? "checked" : null %> >
                        <label for="fries">Fries</label>
                    </div>


                    <label for="sides">Dips</label>
                    <div class="order-checkbox" id="dips">
                        <input type="checkbox" id="ranch" name="dips" value="Ranch" <%= (foundcarts.dips.includes("Ranch")) ? "checked" : null %> >
                        <label for="ranch">Ranch</label>
                        <input type="checkbox" id="marinara" name="dips" value="Marinara" <%= (foundcarts.dips.includes("Marinara")) ? "checked" : null %> >
                        <label for="marinara">Marinara</label>
                    </div>

                    <label for="requests">Requests</label>
                    <textarea name="requests" id="requests" placeholder="Enter special requests" required><%= foundcarts.requests%></textarea>
                    <button>Edit</button>
                </form>
            </div>
        <% } %>
    </body>
    <%- include('layouts/footer'); -%>
        <%- include('layouts/script'); -%>

</html>